<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="activate_autoshare"
        android:title="@string/pref_title_autoshare_activated" />
    <SwitchPreference
        android:defaultValue="false"
        android:dependency="activate_autoshare"
        android:key="activate_facebook"
        android:title="@string/pref_title_autoshare_facebook" />
    <SwitchPreference
        android:defaultValue="false"
        android:dependency="activate_autoshare"
        android:key="activate_twitter"
        android:title="@string/pref_title_autoshare_twitter" />
    <SwitchPreference
        android:defaultValue="false"
        android:dependency="activate_autoshare"
        android:key="activate_googleplus"
        android:title="@string/pref_title_autoshare_googleplus" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->

</PreferenceScreen>
